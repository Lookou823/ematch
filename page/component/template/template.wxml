
<!-- 搭配师界面用的template -->
<template name='infoitem'>

  <view class="info-container" data-id="{{item.id}}" bindtap="gotoDetail">
      <view class="author">
      <image src="{{item.avatar}}" class="avatar" mode="aspectFill"></image>     
      </view>


      <view class="text-content">

      <text class="name">{{item.name}}\n</text>
      <view class="star">
        <image class="temp" src="/image/星星 (4).png"  mode="aspectFit"></image>
        <image class="temp" src="/image/星星 (4).png" mode="aspectFit"></image>
        <image class="temp" src="/image/星星 (4).png" mode="aspectFit"></image>

      </view>
      <view class="xiugai">
      <text class="style">{{item.style}}\n</text>

      <text class="fans">粉丝数：{{item.fans}}\n</text>
      </view>
      <!-- <text class="intro">个人简介：{{item.text}}\n</text> -->

      </view>
  </view>
</template>



