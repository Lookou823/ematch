.newest-box{
    padding:0 40rpx;
}
.newest-box .newest-list{
    display: inline-block;
    width: 325rpx;
    height: 325rpx;
    margin-left: 10rpx;
    margin-top: 20rpx;
    /* margin:0 20rpx 10rpx 0; */
    border-radius: 10px;
    text-align: center;
    background: #f5f6f5;
}
.newest-box .newest-list:nth-child(2n){
    margin-right: 0;
}
.newest-box .newest-list image{
    width: 235rpx;
    height: 235rpx;
    margin: 20rpx 0 0rpx;
    border-radius: 20rpx;
}


.newest-box .newest-list .text-row{

    display: flex;
    flex-direction: row;
    justify-content: center;
 
}



.newest-box .newest-list .newest-text{
    margin:0 20rpx 20rpx 0;

    font-size: 32rpx;
}-text{
    font-size: 32rpx;
    line-height: 45rpx;
}
